{
  "name": "untypical-mafia-rebuilt",
  "version": "2.0.0",
  "type": "module",
  "private": true,
  "description": "Rebuilt version of Untypical Mafia - social deduction game based on ONUW",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "node server/socket-server.js",
    "dev:client": "nuxt dev --srcDir app",
    "build": "nuxt build --srcDir app",
    "start": "concurrently \"NODE_ENV=production node server/socket-server.js\" \"nuxt start --srcDir app\"",
    "start:server": "NODE_ENV=production node server/socket-server.js",
    "start:client": "nuxt start --srcDir app",
    "preview": "nuxt preview --srcDir app",
    "clean": "rm -rf .nuxt .output node_modules/.cache",
    "lint": "eslint . --ext .js,.vue,.ts",
    "test": "vitest",
    "test:unit": "vitest --run",
    "postinstall": "nuxt prepare --srcDir app"
  },
  "dependencies": {
    "@nuxtjs/google-fonts": "^3.2.0",
    "consola": "^3.4.2",
    "cross-env": "^10.0.0",
    "express": "^5.1.0",
    "less": "^4.4.0",
    "nuxt": "^4.0.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.1.0",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "^1.9.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.33.0",
    "nodemon": "^3.1.10",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "werewolf",
    "mafia",
    "onuw",
    "social-deduction",
    "game",
    "online",
    "multiplayer",
    "vue",
    "nuxt",
    "socket.io"
  ],
  "author": "Untypical Mafia Team",
  "license": "MIT"
}
